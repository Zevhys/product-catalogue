<%- include("layout/header") %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <% if (message) { %>
          <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong>
              <%= message.message %>
            </strong>
          </div>
          <% } %>
            <div class="table-responsive">
              <% if (products !=="" ) { %>
                <table class="table table-striped table-bordered border-primary text-center my-3">
                  <thead>
                    <tr class="bs-info-rgb">
                      <th>Image</th>
                      <th>Name</th>
                      <th>Stock</th>
                      <th>Price</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach((row, index)=> { %>
                      <tr class="align-middle">
                        <td>
                          <a href="<%= row.image %>" class="img-gallery">
                            <img src="<%= row.image %>" width="50" class="img-thumbnail" alt="image_product">
                          </a>
                        </td>
                        <td>
                          <%= row.name %>
                        </td>
                        <td>
                          <%= row.stock %>
                        </td>
                        <td class="currencyIDR">
                          <%= row.price %>
                        </td>
                        <td>
                          <a href="/update/<%= row._id %>" class="text-success "><i class="fas fa-edit mx-1"></i></a>
                          <a href="/delete/<%= row._id %>" class="text-danger "><i class="fas fa-trash mx-1"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
                <% } else { %>
                  <h3 class="text-center text-secondary mt-5">No products available. Please add some products to the
                    list.</h3>
                  <% } %>
            </div>
      </div>
    </div>
  </div>

  <%- include("layout/footer") %>