<%- include("layout/header") %>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-primary">
            <h3 class="text-white text-center">Add New Product</h3>
          </div>
          <div class="card-body p-4 text-white">
            <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required
                  minlength="5" maxlength="50" id="name" autocomplete="off" spellcheck="false" pattern=".*\S.*"
                  title="Please enter at least one non-space character">
              </div>
              <div class="mb-3">
                <label for="stock">Stock</label>
                <input type="number" name="stock" class="form-control form-control-lg" placeholder="Enter Stock"
                  required min="0" max="100" id="stock" autocomplete="off">
              </div>
              <div class="mb-3">
                <label for="price">Price</label>
                <input type="number" name="price" class="form-control form-control-lg" placeholder="Enter Price"
                  required min="1000" max="10000000" id="price" step="1000" autocomplete="off">
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Select Image</label>
                <input type="file" class="form-control form-control-lg" name="image" required accept=".jpg, .png"
                  id="image">
              </div>
              <div class="mb-3 d-grid">
                <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("layout/footer") %>